#include<iostream>
using namespace std;

class BankAccount
{
protected:
    string UserName;
    int accountNum;
    double balance;

public:
    BankAccount(string name, int num, double bal)
    {
        UserName = name;
        accountNum = num;
        balance = bal;
    }

    int Deposit(double amount)
    {
        balance = balance + amount;
        cout << "Amount Successfully Deposited : " << amount << endl;
        return balance;
    }

    void Withdraw(double amount)
    {
        if (amount > balance)
        {
            cout << "Don't Have sufficient Balance ";
        }
        else
        {
            balance = balance - amount;
            cout << "Amount Successfully Withdrawn " << amount << endl;
        }
    }

    friend void showInfo(BankAccount account);
};

void showInfo(BankAccount account)
{
    cout << "Account Holder Name : " << account.UserName << endl;
    cout << "Account Number  : " << account.accountNum << endl;
    cout << "Balance  : " << account.balance << endl;
}

class Person : public BankAccount
{
public:
    Person(string name, int num, double bal) : BankAccount(name, num, bal)
    {
    }

    void CheckBalance()
    {
        cout << "Updated Balance : " << balance << endl;
    }
};
int main()
{
    Person p1("Nowrin Ruhi", 23303177, 100000);

    int option;
    double amount;

    do
    {
        cout << "1. Deposit " << endl;
        cout << "2. Withdraw " << endl;
        cout << "3. Balance Check " << endl;
        cout << "4. Show Information " << endl;
        cout << "5. Exit " << endl;

        cout << "Enter your choice: ";
        cin >> option;

        switch (option)
        {
        case 1:
            cout << "Enter Deposit Amount: ";
            cin >> amount;
            p1.Deposit(amount);
            break;

        case 2:
            cout << "Enter Withdraw Amount: ";
            cin >> amount;
            p1.Withdraw(amount);
            break;

        case 3:
            p1.CheckBalance();
            break;

        case 4:
            showInfo(p1);
            break;

        case 5:
            cout << "Thanks for using our system...." << endl;
            break;

        default:
            cout << "Invalid Choice..." << endl;
        }

    